{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": false,
        "noImplicitAny": false,
        "sourceMap": true,
        "jsx": "react",
        "noLib": false,
        "suppressImplicitAnyIndexErrors": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "lib": [
            "es6",
            "es7",
            "dom"
        ],
        "paths": {
            "Config/*": [ "config/*" ],
            "Components/*": [ "components/*" ],
            "Pages/*": [ "pages/*" ],
            "Utils/*": [ "utils/*" ]
        }
    },
    "compileOnSave": false,
    "exclude": [
        "node_modules"
    ]
}